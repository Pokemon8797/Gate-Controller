        result_text2.style('color: red')


    elif Picture_Status == True:
        
        daily_pass_tf, six_m_pass, six_m_exp, free_m_pass, parent_pass, free_m_exp, exptf, count, Cid  = check_daily_passes()
        print(f"DPTF: {daily_pass_tf}")
